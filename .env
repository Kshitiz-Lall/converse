# Production Environment Variables for Docker Compose
# Copy this file to .env in the root directory

# Application Ports
BACKEND_PORT=3000
FRONTEND_PORT=3001

# Environment
NODE_ENV=production

# Database Configuration
MONGO_USERNAME=admin
MONGO_PASSWORD=change-this-secure-password
MONGO_DATABASE=devtoolkit

# Security
JWT_SECRET=change-this-to-a-very-long-random-string-in-production

# API Keys
OPENAI_API_KEY=your-openai-api-key

# URLs
FRONTEND_URL=http://localhost:3001
VITE_API_URL=http://localhost:3000